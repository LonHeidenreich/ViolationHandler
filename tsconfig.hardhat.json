{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "hardhat.config.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app",
    "components",
    "lib",
    "hooks",
    ".next"
  ]
}
