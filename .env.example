# ========================================
# Smart Contract Configuration
# ========================================

# Network RPC URLs
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
LOCALFHEVM_RPC_URL=http://localhost:8545

# Deployment Wallet
# WARNING: Never commit your actual private key!
PRIVATE_KEY=your_wallet_private_key_here

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ========================================
# Contract Addresses
# ========================================

# Deployed SimpleViolationHandler contract
CONTRACT_ADDRESS=0x4db282A151AbfF62B27FF3032003118Ee58Ed0E8

# ========================================
# PauserSet Configuration
# ========================================

# Main pauser addresses (comma-separated)
# These addresses can pause/unpause the contract
PAUSER_ADDRESSES=0x1234...abcd,0x5678...efgh

# Emergency contact for pause operations
EMERGENCY_CONTACT=admin@example.com

# Auto-pause threshold (number of failed transactions before auto-pause)
AUTO_PAUSE_THRESHOLD=10

# Pause notification webhook
PAUSE_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ========================================
# Frontend Configuration
# ========================================

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Public Contract Address (visible to frontend)
NEXT_PUBLIC_CONTRACT_ADDRESS=0x4db282A151AbfF62B27FF3032003118Ee58Ed0E8

# Public Network Configuration
NEXT_PUBLIC_NETWORK_NAME=Sepolia
NEXT_PUBLIC_CHAIN_ID=11155111

# ========================================
# Testing Configuration
# ========================================

# Enable gas reporting in tests
REPORT_GAS=true

# Enable contract size reporting
REPORT_SIZE=true

# Test network fork block number (for mainnet fork testing)
FORK_BLOCK_NUMBER=18000000

# ========================================
# Security & Monitoring
# ========================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable security audit logging
AUDIT_LOGGING=true

# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ========================================
# Performance Optimization
# ========================================

# Enable code splitting
ENABLE_CODE_SPLITTING=true

# Enable image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# CDN URL (if using a CDN)
CDN_URL=https://cdn.yourproject.com

# Cache control max age (seconds)
CACHE_MAX_AGE=3600

# ========================================
# Gas Optimization
# ========================================

# Max gas price (in gwei)
MAX_GAS_PRICE=50

# Gas price multiplier for priority
GAS_PRICE_MULTIPLIER=1.1

# Enable EIP-1559 (London hard fork)
ENABLE_EIP1559=true

# Max priority fee per gas (gwei)
MAX_PRIORITY_FEE=2

# ========================================
# Development Configuration
# ========================================

# Development mode
NODE_ENV=development

# Enable debug logging
DEBUG=false

# Enable source maps
ENABLE_SOURCE_MAPS=true

# Hot reload
HOT_RELOAD=true

# ========================================
# CI/CD Configuration
# ========================================

# Codecov upload token
CODECOV_TOKEN=your_codecov_token_here

# Vercel deployment tokens
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_org_id_here
VERCEL_PROJECT_ID=your_project_id_here

# ========================================
# Database & Storage (if applicable)
# ========================================

# IPFS Gateway
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata API (for IPFS pinning)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret

# ========================================
# Email Notifications (if applicable)
# ========================================

# SendGrid API Key
SENDGRID_API_KEY=your_sendgrid_api_key

# Notification email
NOTIFICATION_EMAIL=notifications@example.com

# ========================================
# Analytics & Tracking
# ========================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Mixpanel Token
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ========================================
# Feature Flags
# ========================================

# Enable beta features
ENABLE_BETA_FEATURES=false

# Enable maintenance mode
MAINTENANCE_MODE=false

# ========================================
# Notes
# ========================================

# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env to version control
# 3. Keep your private keys and API keys secure
# 4. Use different keys for development and production
# 5. Rotate keys regularly for security
# 6. For PauserSet, ensure all pauser addresses are from trusted sources
# 7. Test thoroughly before deploying to mainnet
